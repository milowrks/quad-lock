.icon-cart-alternative {
  display: inline-block;
  vertical-align: middle;
  max-width: unset;
}

// Accordion

.accordion__item {
  border-bottom: 0.3px solid #000;
  padding: 24px 0;
}

.accordion {
  cursor: pointer;
  width: 100%;
  margin-bottom: 0;
  font-size: 12px;
  letter-spacing: 1.2px;
  text-transform: uppercase;
  text-align: left;
}

.panel {
  font-size: 14px;
}

.active .accordion {
  margin-bottom: 18px;
}

.panel {
  display: none;
  overflow: hidden;
}