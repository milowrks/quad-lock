/*================ Alternative Cart ================*/

.icon-cart-alternative {
  display: inline-block;
  vertical-align: middle;
  max-width: unset;
}

/*================ Accordion ================*/

.accordion__item {
  display: flex;
  flex-flow: column nowrap;
  border-bottom: 0.3px solid #000;
  padding: 24px 0;
}

.accordion__item__header {
  position: relative;
}

.accordion__item .fa {
  position: absolute;
  top: 0;
  right: 0;
  line-height: 9px;
  cursor: pointer;
}

.accordion__item:not(.active) .fa-caret-down {
  display: none;
}

.active .fa-caret-up {
  display: none;
}

.accordion {
  cursor: pointer;
  width: 100%;
  margin-bottom: 0;
  font-size: 12px;
  letter-spacing: 1.2px;
  text-transform: uppercase;
  text-align: left;
}

