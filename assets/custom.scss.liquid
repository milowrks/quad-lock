.panel {
  max-height: 0;
  overflow: hidden;
  font-size: 14px;
  transition: all 1s ease-out;
}

.active .panel {
  max-height: 500px;
}

.warranty-policies {
  width: 80%;
  margin: 0 auto;
}

.warranty-policies__content {
  display: flex;
}

.accordion-container {
  flex: 1 0 80%;
  margin-right: 2rem;
}

.quad-lock-stamp {
  flex: 1 0 20%;
}