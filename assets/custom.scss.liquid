/*================ Alternative Cart ================*/

.icon-cart-alternative {
  display: inline-block;
  vertical-align: middle;
  max-width: unset;
}

/*================ Accordion ================*/

.warranty-policies-heading {
  margin-bottom: 2rem;
}

.warranty-policies {
  display: flex;
}

.warranty-policies main {
  flex: 1 0 80%;
  margin-right: 2rem;
}

.accordion__item {
  display: flex;
  flex-flow: column nowrap;
  border-bottom: 0.3px solid #000;
  padding: 24px 0;
}

.accordion__header {
  position: relative;
}

.accordion__item .fa {
  position: absolute;
  top: 0;
  right: 0;
  line-height: 9px;
  cursor: pointer;
}

.accordion__item:not(.active) .fa-caret-down {
  display: none;
}

.accordion__item.active .fa-caret-up {
  display: none;
}

.accordion__header h3 {
  cursor: pointer;
  width: 100%;
  margin-bottom: 0;
  font-size: 12px;
  letter-spacing: 1.2px;
  text-transform: uppercase;
  text-align: left;
}

.accordion__content {
  padding-top: 0;
  max-height: 0;
  overflow: hidden;
  font-size: 14px;
  transition: all 0.2s ease-out;
}

.accordion__item.active .accordion__content {
  padding-top: 14px;
  max-height: 500px;
}

.warranty-policies aside {
  flex: 1 0 20%;
}

@media screen and (max-width: 768px) {
  .warranty-policies {
    flex-direction: column-reverse;
  }
  .warranty-policies aside {
    text-align: center;
  }
}