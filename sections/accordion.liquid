<div class="grid__item medium-up--five-sixths medium-up--push-one-twelfth">
  <h2 class="warranty-policies-heading">{{ section.settings.title }}</h2>
  <div class="warranty-policies">
    <main>
      {% for block in section.blocks %}
        <div class="accordion__item">
          <div class="accordion__header">
            <h3>{{ block.settings.title}}</h3>
            <i class="fa fa-caret-up"></i>
            <i class="fa fa-caret-down"></i>
          </div>
          <div class="accordion__content">
            <p>{{ block.settings.content}}</p>
          </div>
        </div>
      {% endfor %}
    </main>
    <aside>
      <img src="{{ section.settings.image | img_url: '176x172' }}" alt="Accordion Image" />
    </aside>
  </div>
</div>

{% schema %}
  {
    "name": "Accordion",
    "class": "accordion",
    "tag": "section",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Title",
        "default": "Accordion Title"
      },
      {
        "id": "image",
        "type": "image_picker",
        "label": "Select Image"
      }
    ],
    "blocks": [
      {
        "type": "item",
        "name": "Item",
        "settings": [
          {
            "id": "title",
            "type": "text",
            "label": "Title"
          },
          {
            "id": "content",
            "type": "text",
            "label": "Content"
          }
        ]
      }
    ]
  }
{% endschema %}