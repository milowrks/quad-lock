<div class="section-header text-center">
  <img class="page-banner" src="{{'Warranty_Returns-Desk_1801-007.png' | asset_img_url: '1440x289' }}" />
  <h1>{{ page.title }}</h1>
</div>
<div class="page-width">
  <div class="grid">
    <div class="grid__item medium-up--five-sixths medium-up--push-one-twelfth">
      <div class="rte">
        {{ page.content }}
      </div>
    </div>
    {% if section.settings.accordion_enable == true %}
      <div class="grid__item medium-up--five-sixths medium-up--push-one-twelfth">
        <h2 class="warranty-policies-heading">{{ section.settings.title }}</h2>
        <div class="warranty-policies">
          <main>
            {% for block in section.blocks %}
              <div class="accordion__item">
                <div class="accordion__header">
                  <h3>{{ block.settings.title}}</h3>
                  <i class="fa fa-caret-up"></i>
                  <i class="fa fa-caret-down"></i>
                </div>
                <div class="accordion__content">
                  <p>{{ block.settings.content}}</p>
                </div>
              </div>
            {% endfor %}
          </main>
          <aside>
            {% if section.settings.image == blank %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% else %}
              <img src="{{ section.settings.image | img_url: '176x172' }}" alt="Accordion Image" />
            {% endif %}
          </aside>
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Accordion",
  "class": "accordion",
  "tag": "section",
  "settings": [
    {
      "id": "accordion_enable",
      "type": "checkbox",
      "label": "Enable Accordion",
      "default": true
    },
    {
      "id": "title",
      "type": "text",
      "label": "Title",
      "default": "Accordion Title"
    },
    {
      "id": "image",
      "type": "image_picker",
      "label": "Select Image"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "id": "title",
          "type": "text",
          "label": "Title"
        },
        {
          "id": "content",
          "type": "text",
          "label": "Content"
        }
      ]
    }
  ]
}
{% endschema %}